@using WebApplication.Toolkit.HtmlHelperExtensions
@model Core.Entities.User

@Html.ModalHeader("User Details")

<form class="text-nowrap" novalidate="novalidate" name="UsersForm">
    <div class="modal-body">
        <uib-tabset active="active">
            <uib-tab index="0" heading="Home">
                <div class="form-horizontal">

                    <div class="form-group col-sm-6 col-md-6">
                        @Html.CustomLabelFor(model => model.Name)
                        <div class="col-md-8">
                            @Html.CustomEditorFor(model => model.Name, autofocus: true)
                            @Html.CustomValidationMessageFor(model => model.Name)
                        </div>
                    </div>
                    <div class="form-group col-sm-6 col-md-6">
                        @Html.CustomLabelFor(model => model.Email)
                        <div class="col-md-8">
                            @Html.CustomEditorFor(model => model.Email, true)
                            @Html.CustomValidationMessageFor(model => model.Email)
                        </div>
                    </div>
                    <div class="form-group col-sm-6 col-md-6">
                        @Html.CustomLabelFor(model => model.PhoneNumber)
                        <div class="col-md-8">
                            @Html.CustomEditorFor(model => model.PhoneNumber)
                            @Html.CustomValidationMessageFor(model => model.PhoneNumber)
                        </div>
                    </div>
                </div>

                <div class="clearfix"></div>
            </uib-tab>
            @Html.TabPage(1, "Roles", true)
        </uib-tabset>
    </div>

    @*<div class="modal-footer">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ModalSaveAndCloseButton()
                @Html.ModalSaveButton()
                @Html.ModalCloseButton()
            </div>
        </div>
    </div>*@
</form>